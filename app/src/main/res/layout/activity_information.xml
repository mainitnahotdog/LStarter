    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/test"
    android:orientation="vertical"
    tools:context=".LearnGreeting">

    <Button
        android:id="@+id/btn_back1"
        style="@style/button_back"
        android:layout_gravity="left"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/title_text"
        style="@style/title_text"
        android:padding="5dp"
        android:text="15 tips for learning American Sign Language"
        android:textSize="25dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_desc">

        <LinearLayout style="@style/layout_linear_vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/tip_1"
                style="@style/card"
                android:layout_marginTop="20dp">

                <LinearLayout
                    style="@style/layout_linear_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        style="@style/layout_linear_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <TextView
                            style="@style/card_title_text_medium"
                            android:layout_marginStart="10dp"
                            android:gravity="left"
                            android:text="1. Learn the 100 most important vocabulary"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/layout_linear_vertical"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:padding="5dp">

                        <TextView
                            style="@style/card_title_text_medium"
                            android:layout_marginStart="10dp"
                            android:gravity="left"
                            android:text="To start communicating, you need to know some basic vocabulary. That’s why at the beginning of your ASL journey you should aim to learn the essentials, like “hello”, “thanks” or “please”.  "
                            android:textSize="12sp" />


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!--tip2-->
            <androidx.cardview.widget.CardView
                android:id="@+id/tip_2"
                style="@style/card"
                android:layout_marginTop="20dp">

                <LinearLayout
                    style="@style/layout_linear_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        style="@style/layout_linear_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <TextView
                            style="@style/card_title_text_medium"
                            android:layout_marginStart="10dp"
                            android:gravity="left"
                            android:text="2. Learn the finger alphabet"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/layout_linear_vertical"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:padding="5dp">

                        <TextView
                            style="@style/card_title_text_medium"
                            android:layout_marginStart="10dp"
                            android:gravity="left"
                            android:text="It is vital to learn the ASL alphabet when you start out with American Sign Language. Knowing the alphabet will give you the skill to sign any word. So, if you forget a sign you can simply spell it. "
                            android:textSize="12sp" />


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!--tip3-->
